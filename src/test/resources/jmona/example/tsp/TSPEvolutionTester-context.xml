<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- import a different dataset to get a different graph -->
  <import resource="./dataset1.xml" />
  <!-- <import resource="./dataset2.xml" /> -->
  <!-- <import resource="./dataset3.xml" /> -->
  
  <!-- must import the dataset#.xml file first -->
  <import resource="./factories.xml" />
  <import resource="./functions.xml" />
  
  <bean id="population" 
    factory-bean="populationFactory" 
    factory-method="createObject" />

  <bean id="completionCondition" class="jmona.impl.completion.DefaultMaxGenerationCompletionCondition" >
    <property name="maxGenerations" value="100" />
  </bean>

  <bean id="evolutionContext" class="jmona.ga.impl.GAEvolutionContext">
    <constructor-arg>
      <ref bean="population" />
    </constructor-arg>
    <property name="fitnessFunction" ref="fitnessFunction" />
    <property name="crossoverFunction" ref="crossoverFunction" />
    <property name="mutationFunction" ref="mutationFunction" />
    <property name="selectionFunction" ref="selectionFunction" />
  </bean>

</beans>