<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  
  <bean id="polygonFactory" class="jmona.example.monalisa.ColoredPolygonFactory">
    <property name="maxPoints" value="7" />
    <property name="minPoints" value="3" />
    <property name="maxX" ref="width" />
    <property name="maxY" ref="height" />
  </bean>
  
  <bean id="individualFactory" class="jmona.impl.CompleteDeepCopyableListFactory">
    <property name="elementFactory" ref="polygonFactory" />
    <property name="size" value="20" />
  </bean>
  
  <bean id="populationFactory" class="jmona.impl.CompleteDeepCopyableListFactory">
    <property name="individualFactory" ref="individualFactory" />
    <property name="size" value="2" />
  </bean>

</beans>