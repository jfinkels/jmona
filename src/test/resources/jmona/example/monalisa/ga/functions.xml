<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- the mapping from MonaIndividual to BufferedImage -->

  <bean id="mapping" class="jmona.example.monalisa.MonaMapping">
    <constructor-arg ref="width" />
    <constructor-arg ref="height" />
  </bean>

  <!-- the metric for comparing distance between images -->

  <bean id="metric" class="jmona.impl.metrics.ImageMetric">
    <constructor-arg ref="width" />
    <constructor-arg ref="height" />
  </bean>

  <!-- colored polygon mutation function -->
  
  <bean id="polygonMutationFunction" class="jmona.example.monalisa.ColoredPolygonMutationFunction">
    <constructor-arg ref="width" />
    <constructor-arg ref="height" />
  </bean>

  <!-- functions for use in the evolution context -->

  <bean id="fitnessFunction" class="jmona.impl.TargetedFitnessFunction">
    <property name="mapping" ref="mapping" />
    <property name="metric" ref="metric" />
    <property name="target" ref="targetImage" />
  </bean>

  <bean id="crossoverFunction" class="jmona.ga.impl.TwoPointCrossoverFunction" />
  
  <bean id="mutationFunction" class="jmona.impl.mutation.ListMutationFunction">
    <property name="elementMutationFunction" ref="polygonMutationFunction" />
  </bean>
  
  <bean id="selectionFunction" class="jmona.impl.selection.FitnessProportionateSelection" />

</beans>