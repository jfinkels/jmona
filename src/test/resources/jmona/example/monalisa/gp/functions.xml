<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  
  <!-- mapping from Tree<List<ColoredPolygon>> to BufferedImage -->
  <bean id="mapping" class="jmona.example.monalisa.gp.MonaTreeMapping">
    <constructor-arg ref="width" />
    <constructor-arg ref="height" />
  </bean>
  
  <!-- metric which determines the distance between images -->
  
  <bean id="metric" class="jmona.impl.metrics.ImageMetric">
    <constructor-arg ref="width" />
    <constructor-arg ref="height" />
  </bean>
  
  <!-- evolution functions -->
  
  <bean id="selectionFunction" class="jmona.impl.selection.TournamentSelection">
    <property name="tournamentSize" value="2" /> 
  </bean>

  <bean id="crossoverFunction" class="jmona.gp.impl.GPCrossoverFunction" />

  <bean id="mutationFunction" class="jmona.gp.impl.GPMutationFunction">
    <property name="treeFactory" ref="individualFactory" />
  </bean>

  <bean id="fitnessFunction" class="jmona.impl.TargetedFitnessFunction">
    <property name="mapping" ref="mapping" />
    <property name="target" ref="targetImage" />
    <property name="metric" ref="metric" />
  </bean>

</beans>