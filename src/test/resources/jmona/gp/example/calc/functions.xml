<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- equivalence tester -->

  <bean id="equivalenceTester"
        class="jmona.gp.example.calc.FucntionEquivalenceTester" />

  <!-- target function -->
  
  <bean id="target" class="jmona.gp.example.calc.functions.SquareFunction" />

  <!-- evolution functions -->

  <bean id="selectionFunction" 
        class="jmona.impl.selection.FitnessProportionateSelection" />
  <bean id="crossoverFunction" class="jmona.gp.impl.GPCrossoverFunction" />
  <bean id="mutationFunction" class="jmona.gp.impl.GPMutationFunction" />
  <bean id="fitnessFunction" class="jmona.gp.impl.GPFitnessFunction">
    <property name="target" ref="target" />
    <property name="equivalenceTester" ref="equivalenceTester" />
    <property name="evaluationInputs">
      <set>
        <value>0</value>
        <value>1</value>
        <value>-1</value>
        <value>2</value>
        <value>-2</value>
        <value>3</value>
        <value>-3</value>
        <value>4</value>
        <value>-4</value>
        <value>5</value>
        <value>-5</value>
      </set>
    </property>
  </bean>

</beans>